<?xml version="1.0" encoding="utf-8"?>
<!-- A grey rectangle ripple for changing layout backgroud at list_cotroller menu items
 idea from: https://stackoverflow.com/questions/27006288/how-to-create-ripple-effect-in-simple-layout?utm_medium=organic&utm_source=google_rich_qa&utm_campaign=google_rich_qa-->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@android:color/darker_gray">
    <item
        android:id="@android:id/mask"
        android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/darker_gray"/>
        </shape>
    </item>
</ripple>
